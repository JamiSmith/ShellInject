<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:ShellInject.Extensions;assembly=ShellInject"
             xmlns:vm="clr-namespace:Sample.ViewModels"
             extensions:ShellInjectPageExtensions.ViewModelType="{x:Type vm:TabbedPageOneViewModel}"
             x:DataType="vm:TabbedPageOneViewModel"
             x:Class="Sample.ContentPages.TabbedPageOne">
    <ContentPage.Content>
        <Grid
            Padding="30"
            Margin="30">
            <VerticalStackLayout
                Spacing="16"
                VerticalOptions="Start"
                HorizontalOptions="Center">
                <Label
                    Text="Tabbed Page ONE!"
                    FontSize="30"
                    FontAttributes="Bold"/>
                <Button
                    Command="{Binding ShowTabTwoCommand}"
                    Text="Show Tab 2"/>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>